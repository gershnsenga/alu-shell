#!/usr/bin/env bash
# Get the PIDs of processes containing the word "bash"
pids=$(grep -l '\bbash\b' /proc/*/comm 2>/dev/null | awk -F'/' '{print $3}')

# Display PID and process name
for pid in $pids; do
  process_name=$(tr -d '\0' < "/proc/$pid/comm")
  echo "PID: $pid, Process Name: $process_name"
done
